= form_for [@car_wash, @request] do |f|
  %fieldset.right-aligned
    - if @request.errors.any?
      #error_explanation
        %h2= "#{pluralize(@request.errors.count, "error")} prohibited this request from being saved:"
        %ul
          - @request.errors.full_messages.each do |msg|
            %li= msg

    .m-row
      = f.label "Имя:"
      = f.text_field :name, class: 'm-form-control'
    .m-row
      = f.label "Телефон:"
      = f.text_field :phone, class: 'm-form-control'
    .m-row
      = f.label "Марка автомобиля:"
      = f.text_field :car_model, class: 'm-form-control'
    .m-row
      = f.label :license_plate_no, "Гос. номер:"
      = f.text_field :license_plate_no, class: 'm-form-control'
    .m-row
      = f.label "Время записи:"
      = f.datetime_select :wash_at, class: 'm-form-control'
    .m-row
      = f.label "Перечень услуг:"
      = f.text_area :text, class: 'm-form-control'
    .m-row
      = f.submit t("save_button"), class: 'm-btn'
