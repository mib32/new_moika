= form_for [:admin,@settings], html: {class: 'form-horizontal'}, method: :put do |f|
  - if @settings.errors.any?
    #error_explanation
      %h2= "#{pluralize(@settings.errors.count, "error")} prohibited settings from being saved:"
      %ul
        - @settings.errors.full_messages.each do |msg|
          %li= msg

  .form-group.row
    %h4 Маленький рекламный блок
    = label_tag nil, 'Заглавие', class: 'control-label col-lg-2'
    .col-lg-3
      = f.text_field :ad_1_title, class: 'form-control'
  .form-group.row
    = label_tag nil, 'Текст', class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_area :ad_1_text, class: 'form-control'
  .form-group.row
    = label_tag nil, 'Ссылка', class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :ad_1_url, class: 'form-control'
  .form-group.row
    %h4 Большой рекламный блок
    = label_tag nil, "Заглавие", class: 'control-label col-lg-2'
    .col-lg-3
      = f.text_field :ad_2_title, class: 'form-control'
  .form-group.row
    = label_tag nil, "Текст", class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :ad_2_text, class: 'form-control'
  .form-group.row
    = label_tag nil, 'Ссылка', class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_area :ad_2_url, class: 'form-control'
  .row
    .col-lg-4
      = submit_tag t("save_button"), class: 'btn btn-danger btn-block'