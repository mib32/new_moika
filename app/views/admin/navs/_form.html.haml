= form_for [:admin, @nav] do |f|
  - if @nav.errors.any?
    #error_explanation
      %h2= "#{pluralize(@nav.errors.count, "error")} prohibited this nav from being saved:"
      %ul
        - @nav.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :path
    = f.text_field :path
  .field
    = f.label :image_url
    = f.text_field :image_url
  .field
    = f.label :hidden_xs
    = f.check_box :hidden_xs
  .actions
    = f.submit 'Save'
